@model IEnumerable<MVC_CORE_CRUD.Models.Units>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<h2>List</h2>
<br />
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UnitID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit_Name)
            </th>
            <th style="width:125">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {   id=item.UnitID  } ) |
                    @Html.ActionLink("Details", "Details", new {  id=item.UnitID  }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.UnitID  })
            </td>
        </tr>
}
    </tbody>
</table>
